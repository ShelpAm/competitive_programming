template<typename T> concept is_pair = requires(T t) {
  t.first;
  t.second;
};
void print(auto&& t)
{
  if constexpr (std::ranges::range<decltype(t)>) {
    for (auto&& ele: t) {
      print(ele);
    }
    std::cout << '\n';
  }
  else if constexpr (is_pair<decltype(t)>) {
    std::cout << t.first << ": " << t.second << ", ";
  }
  else {
    std::cout << t << ' ';
  }
}
void debug(std::string_view const& sv, auto&& t)
{
  std::cout << sv << ": ";
  print(t);
}
void input(auto&& t)
{
  if constexpr (std::ranges::range<decltype(t)>) {
    for (auto&& ele: t) {
      input(ele);
    }
  }
  else if constexpr (is_pair<decltype(t)>) {
    std::cin >> t.first >> t.second;
  }
  else {
    std::cin >> t;
  }
}
auto&& operator>>(auto&& is, auto&& t)
{
  if constexpr (std::ranges::range<decltype(t)>) {
    for (auto&& ele: t) {
      is >> ele;
    }
  }
  else if constexpr (is_pair<decltype(t)>) {
    is >> t.first >> t.second;
  }
  else {
    is >> t;
  }
  return is;
}
struct ticket_t {
  long long carrier, price, t;
};
size_t check(auto&& v, ticket_t const& e, size_t idx)
{
  for (auto i{idx}; i != v.size(); ++i) {
    if (e.price <= v[i].price) {
      std::cout << v[i].t << ' ';
      // v[i].t = -0x3f;
      v[i].price = 0;
      return 0;
    }
  }
  return e.price;
}
void solve_case()
{
  size_t n{};
  std::cin >> n;
  std::vector<ticket_t> tickets(n);
  for (auto&& e: tickets) {
    std::cin >> e.carrier >> e.price >> e.t;
  }

  size_t total_price{};
  std::vector<ticket_t> v;
  size_t idx{};
  for (auto const e: tickets) {
    if (e.carrier == 0) {
      v.emplace_back(e);
      total_price += e.price;
    }
    else {
      while (idx != v.size() && e.t - v[idx].t > 45) {
        ++idx;
      }
      total_price += check(v, e, idx);
    }
  }
  std::cout << total_price;
}
int main()
{
  std::ios::sync_with_stdio(false);
  std::cin.tie(nullptr);
  // std::cout.tie(nullptr);

  size_t n{1};
  // n = read<size_t>();
  for (size_t i{}; i != n; ++i) {
    solve_case();
  }
  return 0;
}
